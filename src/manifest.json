{
    "name": "Copy downloaded text",
    "version": "1.0.0",
    "manifest_version": 3,
    "description": "When you download text file, copy to clipboard. \n If the file is a CSV, it is converted to a TSV.",
    "background": {
      "service_worker": "service.js"
    },
    "permissions": [
      "background",
      "downloads"
    ],
    "host_permissions": [
      "file:///*/*"
    ],
    "content_scripts": [{
      "matches": ["<all_urls>"],
      "js": [
        "content.js"
      ]
    }]
  }